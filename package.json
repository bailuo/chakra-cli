{
  "name": "chakra-cli",
  "description": "Command line interface for Chakra UI",
  "version": "1.0.0",
  "author": "Kelvin Omereshone <kelvinomereshone@gmail.com> (https://twitter.com/dominus_kelvin)",
  "bin": {
    "chakra": "./bin/run"
  },
  "bugs": "https://github.com/chakra-ui/chakra-cli/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^3",
    "@octokit/rest": "^18.0.0",
    "shelljs": "0.8.4",
    "@types/shelljs": "^0.8.8",
    "esformatter": "^0.11.3",
    "fs-extra": "9.0.1",
    "oclif": "1.16.1",
    "prettier": "^2.0.5",
    "tslib": "^1"
  },
  "devDependencies": {
    "all-contributors-cli": "^6.16.0",
    "@oclif/dev-cli": "^1",
    "@types/babel__core": "^7.1.8",
    "@types/fs-extra": "5.0.2",
    "@types/node": "^10",
    "@types/prettier": "^2.0.1",
    "eslint": "^5.13",
    "eslint-config-oclif": "^3.1",
    "eslint-config-oclif-typescript": "^0.1",
    "globby": "^10",
    "ts-node": "^8",
    "typescript": "^3.9.5"
  },
  "directories": {
    "lib": "lib"
  },
  "engines": {
    "node": ">=10.1.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/chakra-ui/chakra-cli",
  "keywords": [
    "chakra",
    "chakra-ui",
    "cli"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "chakra",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "chakra-ui/chakra-cli",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts"
}
